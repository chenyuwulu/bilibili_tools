{
	"manifest_version": 2,
	"name": "B站增强工具包",
	"version": "1.0",
	"description": "把自己能想到的功能付出实践",
	"author": "FAQ",
	"homepage_url": "https://github.com/chenyuwulu/bilibili_tools",
	"icons":
	{
		"48": "static/icon/icon.png",
		"128": "static/icon/icon.png"
	},
	"browser_action": 
	{
		"default_icon": "static/icon/icon.png",
		"default_popup": "popup.html"
	},
	"permissions":
	[
		"contextMenus",//浏览器右键菜单权限
		"tabs",//浏览器标签页api权限，原本不需要在配置清单写也可以调用，但是访问标签页的链接，标题等时，需要对应全新啊。
		"notifications",//通知所需要的权限
		"webRequest",//发起request所需要的权限
		"webRequestBlocking",
		"storage",
		"declarativeContent",
		"http://*/*",
		"https://*/*"
	],
	"content_scripts": 
	[
		{
			"matches": ["<all_urls>"],
			"js": ["static/jquery/jquery-3.4.1.js","js/content-start.js"],
			"run_at": "document_start"
		},
		{
			"matches":["https://www.bilibili.com/*"],
			"js":["js/content-end.js"],
			"run_at":"document_end"
		}
	],
	"web_accessible_resources": 
	[
		"inject.js"
	],
	"background":
	{
		"page": "background.html"
	},
	"options_ui":
	{
		"page": "options.html"
	}
}